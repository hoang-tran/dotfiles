" no status bar
set laststatus=2

" proper search
set hlsearch
set incsearch
set ignorecase
set smartcase
set wrap
set wrapscan
set gdefault
set relativenumber

imap jk <Esc>:w<CR>
nnoremap ,s <Esc>:w<CR>
nnoremap ,q :q<CR>

" no bells
set noerrorbells

" use system pasteboard
set pasteboard

" comments
nnoremap gcc :xccmd commentAndUncommentCurrentLines<cr>
vnoremap gc  :xccmd commentAndUncommentCurrentLines<cr>

" new tab
nnoremap ,nt :xccmd newTab<cr>
nnoremap gT :xccmd selectPreviousTab<cr>
nnoremap gt :xccmd selectNextTab<cr>
